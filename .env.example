# Advanced Gasless Subscription System - Environment Variables

# Copy this file to .env and configure for your deployment

# ============================================================
# PRIVATE KEY (REQUIRED)
# ============================================================
# Your deployment wallet private key (never commit this!)
PRIVATE_KEY=your_deployment_private_key_here

# ============================================================
# RPC ENDPOINTS
# ============================================================
# Polygon Mainnet
POLYGON_RPC_URL=https://polygon-rpc.com/

# Mumbai Testnet (Polygon)
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com/

# Polygon zkEVM Testnet
POLYGON_ZKEVM_RPC_URL=https://rpc.public.zkevm-test.net/

# Local development
LOCALHOST_RPC_URL=http://127.0.0.1:8545/

# ============================================================
# API KEYS FOR CONTRACT VERIFICATION
# ============================================================
# PolygonScan API key
POLYGONSCAN_API_KEY=your_polygonscan_api_key

# Polygon zkEVM API key
POLYGON_ZKEVM_API_KEY=your_polygon_zkevm_api_key

# Etherscan API key (for Ethereum mainnet)
ETHERSCAN_API_KEY=your_etherscan_api_key

# ============================================================
# ERC-4337 CONFIGURATION
# ============================================================
# Standard EntryPoint address (same across all networks)
ENTRYPOINT_ADDRESS=0x5FF137D4b0FDCD49DcA30c7CF57E578a026d2789

# Bundler URLs (optional - for advanced setups)
BUNDLER_URL_POLYGON=https://api.stackup.sh/v1/node/your_api_key
BUNDLER_URL_MUMBAI=https://api.stackup.sh/v1/node/your_api_key

# ============================================================
# AUTOMATION CONFIGURATION
# ============================================================
# Gelato Network
GELATO_POLYGON=0x3CACa7b48D0573D611c5f7C582447468a4d04671
GELATO_MUMBAI=0xF82D64357D9120a760e1E4C75f646E0618e5d895

# Chainlink Automation (optional)
CHAINLINK_VRF_COORDINATOR_POLYGON=0xAE975071Be8F8eE67addBC1A82488F1C24858067
CHAINLINK_VRF_COORDINATOR_MUMBAI=0x7a1BaC17Ccc5b313516C5E16fb24f7659aA5ebed

# ============================================================
# TOKEN ADDRESSES
# ============================================================
# Polygon Mainnet Tokens
USDC_POLYGON=0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174
USDT_POLYGON=0xc2132D05D31c914a87C6611C10748AEb04B58e8F
DAI_POLYGON=0x8f3Cf7ad23Cd3CaDbD9735AFf958023239c6A063

# Mumbai Testnet Tokens
USDC_MUMBAI=0x9999f7Fea5938fD3b1E26A12c3f2fb024e194f97
USDT_MUMBAI=0xA02f6adc7926efeBBd59Fd43A84f4E0c0c91e832
DAI_MUMBAI=0x001B3B4d0F3714Ca98ba10F6042DaEbF0B1B7b6F

# ============================================================
# DASHBOARD CONFIGURATION
# ============================================================
# Next.js environment
NEXT_PUBLIC_CHAIN_ID=80001
NEXT_PUBLIC_RPC_URL=https://rpc-mumbai.maticvigil.com/

# Contract addresses (populated after deployment)
NEXT_PUBLIC_SUBSCRIPTION_MANAGER=
NEXT_PUBLIC_PAYMASTER=
NEXT_PUBLIC_SMART_WALLET_FACTORY=
NEXT_PUBLIC_INTEGRATION_REGISTRY=

# Analytics configuration
NEXT_PUBLIC_ANALYTICS_ENABLED=true
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# ============================================================
# SDK CONFIGURATION
# ============================================================
# Default network for SDK
SDK_DEFAULT_CHAIN_ID=80001

# IPFS configuration (for metadata storage)
IPFS_PROJECT_ID=your_infura_ipfs_project_id
IPFS_PROJECT_SECRET=your_infura_ipfs_secret

# ============================================================
# DEPLOYMENT CONFIGURATION
# ============================================================
# Platform fee recipient
PLATFORM_FEE_RECIPIENT=your_fee_recipient_address

# Default platform fee (in basis points, 100 = 1%)
DEFAULT_PLATFORM_FEE=100

# Gas price configuration
MAX_GAS_PRICE=50000000000  # 50 gwei
MAX_GAS_PER_TRANSACTION=500000

# ============================================================
# SECURITY CONFIGURATION
# ============================================================
# Multi-sig wallet for ownership (recommended for production)
MULTISIG_WALLET=your_multisig_wallet_address

# Emergency pause controls
EMERGENCY_PAUSE_ENABLED=true

# Rate limiting
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=100

# ============================================================
# MONITORING & ALERTS
# ============================================================
# Webhook URLs for monitoring
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook

# Alert thresholds
LOW_BALANCE_THRESHOLD=1000000000000000000  # 1 ETH in wei
HIGH_GAS_THRESHOLD=100000000000            # 100 gwei

# ============================================================
# DEVELOPMENT CONFIGURATION
# ============================================================
# Enable debug logging
DEBUG=true
LOG_LEVEL=info

# Test configuration
RUN_INTEGRATION_TESTS=false
TEST_TIMEOUT=30000

# ============================================================
# THIRD-PARTY SERVICES
# ============================================================
# Tenderly (for debugging)
TENDERLY_ACCESS_KEY=your_tenderly_access_key
TENDERLY_PROJECT_SLUG=your_project_slug

# Defender (for operational security)
DEFENDER_API_KEY=your_defender_api_key
DEFENDER_SECRET_KEY=your_defender_secret_key

# ============================================================
# EXAMPLE CONFIGURATION FOR QUICK START
# ============================================================
# Uncomment and configure these for a quick Mumbai testnet setup:

# PRIVATE_KEY=0x1234567890abcdef...
# MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com/
# POLYGONSCAN_API_KEY=ABC123...
# NEXT_PUBLIC_CHAIN_ID=80001